<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingRight="12dp"
    android:paddingLeft="12dp">


    <io.rong.imkit.widget.AsyncImageView
        android:id="@+id/rc_left"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:RCDefDrawable="@drawable/rc_ic_def_msg_portrait"
        app:RCShape="circle" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="翟晓萌关注了你"
            style="@style/tv16BlackStyle"/>

        <TextView

            android:text="留言：感觉你对中国文艺的电影非常有见解，希望能和你交流。"
            style="@style/tv13GrayBStyle"/>

    </LinearLayout>

    <TextView
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:drawableLeft="@drawable/img_follow"
        android:text="关注"
        android:drawablePadding="4dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/friends_follow_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>